# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET    /status                      controllers.Application.getStatus()
POST   /status/:content             controllers.Application.postStatus(content: String)
POST   /photo/:photo                controllers.Application.postPhoto(photo: String)

GET    /feeds                       controllers.Application.getFeed()

POST   /auth/:token                 controllers.Application.setToken(token: String)


# Map static resources from the /public folder to the /assets URL path
GET     /*file                      controllers.Assets.at(path="/java/main/resource", file)